<%= form_with(model: show, local: true) do |form| %>
  
  <% if show.errors.any? %>
    <div id="error-explanation">
      <h2><%= pluralize(show.errors.count, "error") %> prohibited this show date from being saved:</h2>
      
      <ul>
        <% show.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>  

  <div class="row">
    <div class="form-group col-md-3">
      <%= form.date_field :date, class: 'form-control', placeholder: 'Date' %>
    </div>

    <div class="form-group col-md-3">
      <%= form.text_field :city, class: 'form-control', placeholder: 'City' %>
    </div>

    <div class="form-group col-md-3">
      <%= form.text_field :venue, class: 'form-control', placeholder: 'Venue' %>
    </div>

    <div class="form-group col-md-3">
      <%= form.text_field :info, class: 'form-control', placeholder: 'Link' %>
    </div>
  </div>  

  <div class="actions text-center">
    <%= form.submit "Submit Date", class: 'btn btn-primary' %>
  </div>  

<% end %> 