<%= form_with(model: product, local: true) do |form| %>
  <div class="row">
    <% if product.errors.any? %>
      <div id="error-explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this merch item  from being saved:</h2>
        
        <ul>
          <% product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>  

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: 'form-control', rows: 10 %>
      </div>
    </div>  
    
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :link %>
        <%= form.text_field :link, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.label :category_id, "Item Type" %>
        <%= select_tag(:category_id, options_for_select(@categories), :prompt => 'Select one', class: 'form-control') %>
      </div>
    </div>  

    <div class="form-group mt-3">
      <%= form.submit "Save Product", class: 'btn btn-primary'%>
    </div> 

  </div>   

<% end %> 